.body
  .leftCol.gCal
    .my-account-col
      img.profile-pic(src=user.image)
      
      .user-info
        .name= user.name
        .since Joined 
          span.date #{dateFormat(user.sign_up_date, 'mmmm dS, yyyy')}
      
      .mod
        h4.hd Your Stats!
        .content
          ul
            li
              span.number #{stats.entries} 
              |  Contests Entries
            li
              span.number #{stats.wins} 
              |  Prizes Won
            li
              span.number #{stats.redeemed}
              |  Prizes Redeemed
    
  .main
    .my-account-main
      h1 my account
      
      ul.tabs
        li
          a(href="#") Prizes
        li
          a(href="#") History
          
      div.panes
        .pane
          -each prize in prizes
            h3= prize.name
        .pane
          h4 History
          
      script(type="text/javascript")
        $("ul.tabs").tabs("div.panes > div.pane");
  