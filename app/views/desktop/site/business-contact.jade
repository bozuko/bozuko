div(style="float:left; width: 600px;")
  h1 Contact Bozuko
  
  p
    | Bozuko is currently invitation only.  
    | To stay up to date on our progress and be informed when we are coming to your 
    | neighborhood, please join our mailing list.
    |   
    
  - if( locals.errors )
    ul.errors
      - each error in locals.errors
        li!= error
        
  - if( locals.info )
    .positive-info
      p!= info
  
  form(method="post")
    input(type="hidden",name=token,value="1")
    .field-wrap
      label(for="name") Name
      .field
        input#name(name="name",value=locals.name)
    
    .field-wrap
      label(for="email") Email
      .field
        input#email(name="email",value=locals.email)

    .field-wrap
      label(for="company") Company Name
      .field
        input#company(name="company", value=locals.company)

    .field-wrap
      label(for="city") City
      .field
        input#city(name="city", value=locals.city)

    .field-wrap
      label(for="state") State
      .field
        input#state(name="state", value=locals.state)

    .field-wrap
      label(for="zip") Postal Code
      .field
        input#zip(name="zip", value=locals.zip)

    .field-wrap
      label(for="country") Country
      .field
        input#country(name="country", value=locals.country)

    .buttons
      input.big-button(type="submit", value="Send")
.clear(style="clear:both;")