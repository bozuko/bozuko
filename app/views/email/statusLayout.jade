html
  head
    title= locals.title
  body(style="background: #f3f3f3;")
    .wrap(style="background: #f3f3f3; padding: 20px 0; text-align:center;")
      .page(aligh="center",style="width:600px; margin: 0 auto;")
        .border(style="background: #ffffff; border: 1px solid #A5F1C1;")
          .hd(style="padding: 20px; border-bottom: 4px solid #EDFCF2; text-align:left;")
            table(border="0",cellpadding="0",cellspacing="0",width="100%")
              tr(valign="middle")
                td
                  a(href="https://bozuko.com",border="0",style="border-width:0")
                    img(src="https://s3.amazonaws.com/bozuko/public/logo/bozuko-logo.jpg", alt="Bozuko")
          
          .bd(style="padding: 20px; color: #666; font-family:Trebuchet MS, Tahoma, arial, sans; font-size: 14px; text-align:left;")
            != body
          
          .ft(style="padding: 20px; background:#EDFCF2; color: #006B35; font-family: Trebuchet MS, Tahoma, arial, sans; font-size: 14px; text-align:left;")
            | - The Bozuko Team
          
      .bottom(style="font-family:Trebuchet MS, Tahoma, arial, sans; font-size: 13px; color: #666; padding-top: 10px;")
        span &copy; #{new Date().getFullYear()} Bozuko Inc.
