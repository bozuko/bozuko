html.like_button(xmlns:fb="http://www.facebook.com/2008/fbml",xmlns="http://www.w3.org/1999/xhtml",class=locals.classes?classes.join(' '):'')
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport",content="initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no")
    link(rel="stylesheet",type="text/css",href="/css/touch/like_button.css?"+Date.now())
  body
    #fb-root
      
    -if( locals.place )
      .like-button
        script
          APP_ID = #{Bozuko.config.facebook.app.id};
        script(src="https://connect.facebook.net/en_US/all.js#appId="+Bozuko.config.facebook.app.id+"&amp;xfbml=1")
        script(src="/js/touch/lib/http.js?v2")
        script(src="/js/touch/app/facebook/like_button.js?v2")
        fb:like(href=place.data.link,send="false",width="50",show_faces="false",font="tahoma",layout="button_count")